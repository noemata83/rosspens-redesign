<% include ../partials/header %>

<div class="main">
    <h1>Update the Welcome Message</h1>
     <form action="/admin/message" method="POST">
        <div class="form-group">
            <label for="articletitle">Message Title: </label>
            <input class="form-control" id="messagetitle" type="text" name="message[title]" placeholder="Title">
        </div>
        <div class="form-group">
            <label for="messagecontent">Message Content (HTML markup allowed; no Javascript!): </label>
            <textarea class="form-control" style="height: 300px" name="message[content]" id="messagecontent"></textarea>
        </div>
        <input class="button" type="submit" value="Submit">
    </form>
</div>

<% include ../partials/footer %>