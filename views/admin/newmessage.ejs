<% include ../partials/header %>

<div class="main">
    <h1>Update the Welcome Message</h1>
     <form action="/admin/message?_method=PUT" method="POST">
         <input type="hidden" value="<%=message._id%>" name="message[id]" />
        <div class="form-group">
            <label for="articletitle">Message Title: </label>
            <input class="form-control" id="messagetitle" type="text" name="message[title]" value="<%=message.title%>">
        </div>
        <div class="form-group">
            <label for="messagecontent">Message Content (HTML markup allowed; no Javascript!): </label>
            <textarea class="form-control" style="height: 300px" name="message[content]" id="messagecontent"><%=message.content%></textarea>
        </div>
        <input class="button" type="submit" value="Submit">
    </form>
</div>

<% include ../partials/footer %>