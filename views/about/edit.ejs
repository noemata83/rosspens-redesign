<% include ../partials/header %>

<div class="main">
    <div class="grid">
        <div class="grid__2-of-3">
            <h1>Edit "<%=article.longTitle%>"</h1>
            <form action="/about/<%=encodeURI(article.title)%>?_method=PUT" method="POST">
                <div class="form-group">
                    <label for="articletitle">Display Title</label>
                    <input class="form-control" id="articletitle" type="text" name="article[title]" value="<%=article.title%>">
                </div>
                <div class="form-group">
                    <label for="articlefulltitle">Full Title</label>
                    <input class="form-control" type="text" name="article[longTitle]" id="articlefulltitle" value="<%=article.longTitle%>">
                </div>
                <div class="form-group">
                    <label for="articlecontent">Article Content</label>
                    <textarea class="form-control" style="height: 250px" name="article[content]" id="articlecontent"><%=article.content%></textarea>
                </div>
                <input class="button" type="submit" value="Submit">
            </form>
        </div>
        <div class="grid__1-of-3" style="position: relative;">
            <div class="image-menu">
                <div class="image-menu__display">
                    <h3 class="image-menu__instructions">Click an image below to copy the HTML snippet to the clipboard:</h3>  
                </div>
                <div class="image-menu__form">
                    <div class="image-menu__form--toggle">
                        <button class="button" onClick="fileInputToggle()">Add Images</button>
                    </div>
                    <div class="image-menu__form--input">
                        <form id="articleImageUpload" action="/about/images" method="POST" enctype="multipart/form-data">
                            <input type="file" id="articleImages" />
                            <input type="hidden" id="imageURLs" name="imageURLs" value="" />
                            <input type="submit" value="Upload Images" class="button" />
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="https://unpkg.com/axios/dist/axios.min.js"></script>
<script src="/assets/js/article.js"></script>

<% include ../partials/footer %>