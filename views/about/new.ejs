<% include ../partials/header %>

<div class="main">
    <h1>Add a New Info Page</h1>
     <form action="/about" method="POST">
        <div class="form-group">
            <label for="articletitle">Display Title (shown in navigation bar): </label>
            <input class="form-control" id="articletitle" type="text" name="article[title]" placeholder="(Short) Title">
        </div>
        <div class="form-group">
            <label for="articlefulltitle">Full Title (shown on article page): </label>
            <input class="form-control" type="text" name="article[longTitle]" id="articlefulltitle" placeholder="Complete Title">
        </div>
        <div class="form-group">
            <label for="articlecontent">Article Content (HTML markup allowed; no Javascript!): </label>
            <textarea class="form-control" style="height: 250px" name="article[content]" id="articlecontent"></textarea>
        </div>
        <input class="btn btn-primary" type="submit" value="Submit">
    </form>
</div>

<% include ../partials/footer %>